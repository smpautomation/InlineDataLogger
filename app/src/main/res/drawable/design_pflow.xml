<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />

            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerColor="#A16EFF"
                android:endColor="#7514FC"
                android:startColor="#DABAFF"  />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />

            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerColor="#FFDB6E"
                android:endColor="#CAFC14"
                android:startColor="#BAC2FF" />
        </shape>
    </item>
</selector>