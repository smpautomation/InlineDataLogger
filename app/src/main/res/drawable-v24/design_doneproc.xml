<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />

            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerColor="#CCFF6E"
                android:endColor="#93CD73"
                android:startColor="#C3FF6E"  />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" />

            <corners android:radius="5dp" />

            <gradient
                android:angle="270"
                android:centerColor="#CCFF6E"
                android:endColor="#93CD73"
                android:startColor="#C3FF6E"  />
        </shape>
    </item>
</selector>